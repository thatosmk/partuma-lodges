<div class="container">
        <div class="col-sm-12 col-md-12 col-lg-12">
            <div class="row">
                <div class="events-div-0">
                    <h1 class="jazz-header">Jazz Events</h1>  
                </div>
            </div>
            <div class="row">
                <h2 class="page-header"><%= pluralize(@events.count, 'Upcoming Event')%></h2>
                <% @events.each do |event| %>
                <div class="row media-events-row">
                    <div class="media media-middle">
                        <div class="media-left">
                            <%= image_tag("sax_event.jpeg", class: "media-object", alt: "", height: 150)%>
                        </div>
                        <div class="media-body">
                            <h4 class="media-heading"><%= event.name %></h4>
                            <p class="text-muted"><%= event.description %></p>
                            <strong>when: </strong>
                            <p class="text-info"><%= event.event_date %>, at <%= event.event_time %></p>
                            <%= link_to "Interested", "#", class: "btn btn-default btn-lg"%>
                        </div>
                    </div>
                </div>
                <% end %>
            </div>
            <div class="row">
                <h1 class="page-header text-muted">Previous Events</h1>
                <% @posts.each do |post|%>
                <div class="row media-events-row">
                    <div class="media">
                        <div class="media-left">
                            <%= image_tag("sax_event.jpeg", class: "media-object", alt: "", height: 150)%>
                        </div>
                        <div class="media-body">
                                <h1 class="media-heading"><%= post.title %></h1>
                                <br/>
                                <br/>
                                <br/>
                                <%= link_to "View", post, class: "btn btn-default btn-lg"%>
                        </div>
                    </div>
                </div>
                <% end %>
            </div>
        </div>
</div>
