<%= form_with(model: account, local: true) do |form| %>
  <% if account.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(account.errors.count, "error") %> prohibited this account from being saved:</h2>

      <ul>
      <% account.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
      <div class="col-md-4 col-lg-4">
            <%= form.label :first_name %>
            <%= form.text_field :name, class: "form-control"%>
      </div>
      <div class="col-md-4 col-lg-4">
            <%= form.label :last_name %>
            <%= form.text_field :surname, class: "form-control" %>
            <br>
            <br>
      </div>
  </div>

  <div class="field">
    <%= form.label :cel %>
    <%= form.text_field :cel %>
  </div>

  <div class="field">
    <%= form.label :address %>
    <%= form.text_area :address %>
  </div>

  <div class="row">
      <div class="col-md-4 col-lg-4">
            <%= form.label :address %>
            <%= form.text_area :address, class: "form-control", rows: 12 %>
      </div>
      <div class="col-md-4 col-lg-4">
            <%= form.label :cell_number %>
            <%= form.text_field :cell, class: "form-control" %>
            <br>
            <br>
      </div>
  </div>

  <div class="row">
      <div class="col-md-4 col-lg-4">
        <%= form.label :dob %>
        <%= form.date_select :dob %>
      </div>
  
      <div class="col-md-4 col-lg-4">
        <%= form.file_field :avatar %> 
      </div>
  </div>


  <div class="row">
      <div class="col-sm-4 col-md-4 col-lg-4">
        <%= form.submit, class: "btn btn-success btn-block" %>
      </div>
  </div>
<% end %>
