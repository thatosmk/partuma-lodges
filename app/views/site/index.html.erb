    <div class="row">
        <h2 class="pull-left">Explore Partuma</h2>
        <br/>
        <br/>
        <br/>
    </div>
    <div class="row"> 
        <div class="col-xs-12 col-sm-5 col-md-4 col-lg-3">
            <div class="media">
                <div class="media-left explore-left">
                </div>
                <div class="media-body">
                    <h1 class="pull-left"><%= link_to "Accommodation", rooms_path %></h1>
                </div>
            </div>
        </div>
        <div class="col-xs-6 col-sm-4 col-md-3 col-lg-2">
            <div class="media">
