<% if current_user.admin? %>             
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-2 col-md-2 col-lg-2 sidebar">
            <%= render 'site/sidebar' %> 
        </div>
        <div class="col-sm-8 col-md-8 col-lg-8 main-wrapper">
            <div class="row">
                <h1 class="page-header">Users</h1>
            </div>
            <table class="table table-striped table-bordered">
                <tr>
                    <th>Name</th>
                    <th>Surname</th>
                    <th>Email</th>
                </tr>
                <% @users.each do |user|%>
                    <tr>
                        <td><%= user.email%></td>
                        <td><%= user.email%></td>
                        <td><%= user.email%></td>
                    </tr>
                <% end %>
            </table>
        </div>
    </div>
</div>
<% end %>
