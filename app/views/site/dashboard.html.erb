<% if current_user.admin? %>             
<div class="container-fluid">
    <div class="row col-sm-11 col-md-11 col-lg-11 main-dashboard">
        <div class="row">
            <%= render "topbar"%>
        </div>
        <div class="row">
                <%= line_chart @visits.group_by_day(:started_at).count,colors: ["#b00", "#666"], xtitle: "Date accessed", ytitle: "Total No of People", title: "Daily Visitors"  %>
        </div>
        <div class="row hidden-sm">
            <h1 class="text-muted page-header">Total Sign ups</h1>
            <table class="table table-striped table-bordered">
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Surname</th>
                    <th>Email</th>
                    <th>Created Date</th>
                </tr>
                <% @users.each do |user|%>
                    <tr>
                        <td><%= link_to user.id, "#"%></td>
                        <td><%= user.account.name%></td>
                        <td><%= user.account.surname%></td>
                        <td><%= user.email%></td>
                        <td><%= user.created_at.strftime("%d, %B, %Y")%></td>
                    </tr>
                <% end %>
            </table>
        </div>
    </div>
</div>
<% end %>
