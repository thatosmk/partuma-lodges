<% if current_user.admin? %>             
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-3 col-md-2 col-lg-2 sidebar hidden-xs">
            <%= render 'site/sidebar' %> 
        </div>
        <div class="col-xs-12 col-sm-9 col-md-8 col-lg-8 main-wrapper">
            <div class="row">
                <h1 class="page-header">Daily Visitors</h1>
                    <%= line_chart @visits.group_by_day(:started_at).count %>
            </div>
            <div class="row">
                <%= pie_chart @visits.group(:device).count %> 
            </div>
        </div>
    </div>
</div>
<% end %>
